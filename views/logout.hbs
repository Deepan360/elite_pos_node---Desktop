<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <style>
        body {
            margin: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 100vh;
        }

        .loginscreen {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 900px;
            max-width: 100%;
            margin: auto;
        }

        .loginButtonContainer {
            text-align: center;
            margin-bottom: 20px;
        }

        .foot {
            display: flex;
            justify-content: center;
            text-align: center;
            align-items: center;
            text-wrap: nowrap;
        }

        .heading h1 {
            font-size: 90px;
            font-weight: bold;
            color: rgba(0, 0, 0, 0.2);
            animation: moveDown 1s ease forwards;
        }

        @keyframes moveDown {
            0% {
                transform: translateY(-50px);
                opacity: 0;
            }

            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>

<body>
    <div class="heading">
        <h1>Logged Out</h1>
    </div>

    <div class="loginscreen">
        <img src="/assets/img/illustrations/Outerspace.gif" class="image-with-shadow" alt="gif">
    </div>

    <div class="loginButtonContainer">
        <button type="button" class="btn btn-primary" onclick="redirectToLoginPage()">Login</button>
    </div>

    <div class="foot">
        {{>footer}}
    </div>

    <script>
        function redirectToLoginPage() {
            window.location.href = '/'; // Redirect to login page
        }

        // âœ… Prevent back button access after logout
        window.onload = function () {
            sessionStorage.clear();
            localStorage.clear();

            // Remove cached pages
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.getRegistrations().then(function (registrations) {
                    for (let registration of registrations) {
                        registration.unregister();
                    }
                });
            }

            history.pushState(null, null, location.href);
            window.onpopstate = function () {
                history.go(1);
            };
        };

    </script>
</body>

</html>